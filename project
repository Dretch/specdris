#!/bin/bash

declare -r project="specdris.iqkg"
declare -r test="test.iqkg"

clean()
{
    echo "clean project"
    idris --clean ${project}
    cd test; idris --clean ${test}; cd ..
}

test()
{
    echo "test project"
    cd test
    idris --testpkg ${test}

    if [[ $? -eq 0 ]]; then
        echo "SUCCESSFUL"
    else
        echo "FAILURE"
        exit 1
    fi
    cd ..
}

buildNoTest()
{
    echo "build project"
    idris --build ${project}
}

build()
{
    buildNoTest
    test
}

install()
{
    echo "install project"
    clean
    test

    if [[ $? -eq 0 ]]; then
        idris --install ${project}
    else
        echo "couldn't install project > something went wrong"
        exit 1
    fi
}

case $1 in
    "--clean")
        clean
        ;;
    "--build")
        build
        ;;
    "--buildNoTest")
        buildNoTest
        ;;
    "--test")
        test
        ;;
    "--install")
        install
        ;;
    "--help")
        echo "usage: './project [command]'"
        echo "  --clean: cleans the project"
        echo "  --build: builds the code and runs all tests"
        echo "  --test: runs all tests"
        ;;
    *)
        echo "unknown command, use '--help' for help"
        ;;
esac
